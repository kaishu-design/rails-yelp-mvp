<div class="container">

  <h1 class="m-5">All Restaurants</h1>

  <div>
    <p><%= link_to "Add new restaurant", new_restaurant_path, class: "btn btn-outline-secondary"%></p>
  </div>

  <% @restaurants.each do |restaurant| %>
    <div class="card m-5" style="max-width: 80%;">
      <div class="row no-gutters">

        <div class="col-md-4">
          <img src="<%= restaurant.image %>" class="card-img" alt="<%= restaurant.name %>">
        </div>

        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant), class: 'text-decoration-none text-dark' %></h5>
            <p class="card-text">Located : <%= restaurant.address %></p>
            <p class="card-text">Category : <%= restaurant.category %></p>
            <p class="card-text">Tel : <%= restaurant.phone_number %></p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            <p class="card-text d-flex justify-content-end"><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-outline-secondary"%></p>
          </div>
        </div>

      </div>
    </div>
  <% end %>


</div>
